<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/modify_room_rl"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:lineSpacingExtra="-10sp"
            android:text="모임 수정하기"
            android:textColor="#333333"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/modify_room_back_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_plus" />

        <ImageButton
            android:id="@+id/modify_room_profile_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="135dp"
            android:background="@android:color/transparent"
            android:src="@drawable/app_logo" />

        <TextView
            android:id="@+id/modify_room_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="155dp"
            android:lineSpacingExtra="6.2sp"
            android:text="김태성"
            android:textColor="#000000"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/modify_room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/modify_room_profile_img"
            android:background="@null"
            android:hint="방 제목을 입력해주세요!"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:lineSpacingExtra="20sp"
            android:paddingBottom="16dp"
            android:paddingLeft="27dp"
            android:paddingTop="16dp"
            android:textColor="#949494"
            android:textSize="14sp" />


        <LinearLayout
            android:id="@+id/meeting_modify_ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/modify_room_name"
            android:background="@drawable/categoryitem_border"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:paddingTop="16dp"
                android:lineSpacingExtra="20sp"
                android:text="위치"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/modify_room_location"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:paddingTop="16dp"
                android:lineSpacingExtra="20sp"
                android:paddingBottom="16dp"
                android:text="여의도 한강공원"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/meeting_modify_ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/meeting_modify_ll1"
            android:background="@drawable/categoryitem_border"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:paddingTop="16dp"
                android:lineSpacingExtra="20sp"
                android:text="시간"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/modify_room_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:lineSpacingExtra="20sp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="2018-12-31"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/modify_room_time"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:lineSpacingExtra="20sp"
                android:text="11:00"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/meeting_modify_ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/meeting_modify_ll2"
            android:background="@drawable/categoryitem_border"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:paddingTop="16dp"
                android:lineSpacingExtra="20sp"
                android:text="인원"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/modify_room_num"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="@null"
                android:hint="참가를 희망하는 인원을 적어주세요"
                android:lineSpacingExtra="20sp"
                android:textColor="@color/warm_grey"
                android:textSize="14sp"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:singleLine="true"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:paddingTop="16dp"
                android:lineSpacingExtra="20sp"
                android:text="명"
                android:textColor="@color/warm_grey"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/meeting_modify_ll4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/meeting_modify_ll3"
            android:background="@drawable/categoryitem_border"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:paddingTop="16dp"
                android:lineSpacingExtra="20sp"
                android:text="회비"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/modify_room_fee"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="@null"
                android:hint="예상 금액을 입력해주세요."
                android:lineSpacingExtra="20sp"
                android:textColor="@color/warm_grey"
                android:textSize="14sp"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:singleLine="true"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:paddingTop="16dp"
                android:lineSpacingExtra="20sp"
                android:text="원"
                android:textColor="@color/warm_grey"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/meeting_modify_ll5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/meeting_modify_ll4"
            android:background="@drawable/categoryitem_border"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:paddingTop="16dp"
                android:lineSpacingExtra="20sp"
                android:text="연락처"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/modify_room_contact"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="@null"
                android:hint="여백 없이 11자를 입력해주세요"
                android:lineSpacingExtra="20sp"
                android:textColor="@color/warm_grey"
                android:textSize="14sp"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:singleLine="true"/>

        </LinearLayout>
        <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/createroom_rv"-->
        <!--android:layout_marginTop="267dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="200dp">-->

        <!--</android.support.v7.widget.RecyclerView>-->

        <EditText
            android:id="@+id/modify_room_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="19dp"
            android:paddingBottom="30dp"
            android:layout_below="@+id/meeting_modify_ll5"
            android:background="#ffffff"
            android:hint="모임의 이야기를 들려줘!"
            android:paddingLeft="27dp"
            android:paddingRight="27dp"
            android:textColor="@color/warm_grey"
            android:textSize="14sp" />

        <Button
            android:layout_below="@id/modify_room_content"
            android:id="@+id/modify_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#2186f8"
            android:padding="0dp"
            android:text="모임 수정완료"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </RelativeLayout>
</ScrollView>