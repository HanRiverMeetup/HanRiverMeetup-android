<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">
        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/timeline_container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <ImageView
                android:id="@+id/timeline_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
            <ImageView
                android:id="@+id/timeline_profile_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"/>
            <TextView
                android:id="@+id/timeline_profile_name"
                app:layout_constraintStart_toEndOf="@+id/timeline_profile_img"
                app:layout_constraintTop_toTopOf="@+id/timeline_profile_img"
                app:layout_constraintBottom_toBottomOf="@+id/timeline_profile_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:textColor="@color/white"
                android:lineSpacingExtra="-10sp"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="7dp"/>
            <ImageView
                android:id="@+id/timeline_location_icon"
                app:layout_constraintStart_toEndOf="@+id/timeline_profile_name"
                app:layout_constraintTop_toTopOf="@+id/timeline_profile_name"
                app:layout_constraintBottom_toBottomOf="@+id/timeline_profile_name"
                android:layout_width="10dp"
                android:layout_height="13dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:src="@drawable/ic_location_white" />
            <TextView
                android:id="@+id/timeline_profile_location"
                app:layout_constraintStart_toEndOf="@+id/timeline_location_icon"
                app:layout_constraintTop_toTopOf="@+id/timeline_location_icon"
                app:layout_constraintBottom_toBottomOf="@+id/timeline_location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:textColor="@color/white"
                android:lineSpacingExtra="-10sp"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="6dp"/>
        </android.support.constraint.ConstraintLayout>
    <TextView
        android:id="@+id/timeline_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeline_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="93dp"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_margin="21dp"
        android:lineSpacingExtra="8sp" />
</android.support.constraint.ConstraintLayout>