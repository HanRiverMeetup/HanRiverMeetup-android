<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meeting_list_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/list_top"
        android:background="@drawable/back_grad_color"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        >

        <ImageButton
            android:id="@+id/meeting_list_back"
            android:layout_width="32dp"
            android:layout_height="37dp"
            android:padding="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/bt_back"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"/>
        
        <ImageView
            android:id="@+id/list_category_img"
            android:layout_width="51dp"
            android:layout_height="48dp"
            android:layout_marginTop="27dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_camping_icon_white"
            />

        <android.support.design.widget.TabLayout
            android:id="@+id/list_tablayout"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginTop="94dp"
            app:tabIndicatorHeight="0dp"
            app:tabPaddingEnd="0dp"
            app:tabPaddingStart="0dp"
            app:tabMaxWidth="0dp"
            app:tabTextAppearance="@style/MineCustomTabText"
            app:tabTextColor="#ffffff">
        </android.support.design.widget.TabLayout>
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/meeting_list_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        >
    </android.support.v4.view.ViewPager>


    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/meeting_list_fab"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="22dp"
        android:src="@drawable/ic_bt_plus"
        android:layout_height="50dp"
        android:layout_width="50dp"
        app:fab_showShadow="false"
        />


</RelativeLayout>