<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="208dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="23dp"
        android:textSize="14sp"
        android:lineHeight="23sp"
        android:lineSpacingExtra="9sp"
        android:textColor="@color/black"
        android:text="TEST"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="47dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="13dp"
            android:background="@drawable/ic_location_gray"/>
        
        <TextView
            android:id="@+id/meeting_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="12sp"
            android:lineHeight="23sp"
            android:textColor="#949494"
            android:text="여의도 한강공원"/>

        <TextView
            android:id="@+id/meeting_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:textSize="12sp"
            android:lineHeight="23sp"
            android:textColor="#949494"
            android:text="5월30일"/>

        <TextView
            android:id="@+id/meeting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:lineHeight="23sp"
            android:textColor="#949494"
            android:textSize="12sp"
            android:text="시간 11:00"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="11dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="9sp"
        android:text="신청자"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        android:layout_marginTop="214dp"></View>

    <View
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="#2186f8">
    </View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/applicant_list"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="104dp"
        android:divider="#2186f8"
        android:dividerHeight="1dp" />
    <TextView
        android:id="@+id/empty_message"
        android:layout_width="114dp"
        android:layout_height="15dp"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="119dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#dcdcdc"></View>



</RelativeLayout>