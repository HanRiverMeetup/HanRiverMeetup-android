<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="24dp"
        android:textSize="22sp"
        android:textColor="#333333"
        android:lineSpacingExtra="-14sp"
        android:text="방 만들기"
        />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="312dp"
        android:layout_marginTop="34dp"
        android:src="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/profile_img"
        android:layout_marginTop="146dp"
        android:layout_marginLeft="24dp"
        android:layout_width="59dp"
        android:layout_height="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17.5sp"
        android:textColor="#000000"
        android:lineSpacingExtra="10.5sp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="164dp"
        android:text="김태성"
        />
    
    <EditText
        android:id="@+id/room_name"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="23dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#949494"
        android:lineSpacingExtra="20sp"
        android:text="방 제목을 입력해주세요!" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/createroom_rv"
        android:layout_marginTop="249dp"
        android:layout_width="match_parent"
        android:layout_height="195dp">

    </android.support.v7.widget.RecyclerView>

    <EditText

        android:id="@+id/room_content"
        android:layout_width="wrap_content"
        android:layout_height="146dp"
        android:layout_marginTop="445dp"
        android:backgroundTint="#000000"
        android:text="모임의 이야기를 들려줘!"/>
    
    <Button
        android:id="@+id/create_btn"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="0dp"
        android:text="게시판 등록하기"
        android:textColor="#ffffff"
        android:background="#2186f8"/>

</RelativeLayout>