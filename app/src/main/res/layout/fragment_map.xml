<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="33dp"
        android:lineSpacingExtra="10sp"
        android:text="편의 시설을 확인해보세요"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sub_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="55dp"
        android:lineSpacingExtra="18sp"
        android:text="휴지통"
        android:textColor="@color/clear_blue"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title" />

    <TextView
        android:id="@+id/sub_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="55dp"
        android:lineSpacingExtra="18sp"
        android:text="편의점"
        android:textColor="@color/greyish"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/sub_title1"
        app:layout_constraintTop_toTopOf="@+id/title" />

    <TextView
        android:id="@+id/sub_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="55dp"
        android:lineSpacingExtra="18sp"
        android:text="화장실"
        android:textColor="@color/greyish"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/sub_title2"
        app:layout_constraintTop_toTopOf="@+id/title" />

    <!--<com.google.android.gms.maps.MapView-->
        <!--android:id="@+id/mapView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="40dp"-->
        <!--app:layout_constraintTop_toTopOf="@+id/sub_title1" />-->

    <RelativeLayout
    android:id="@+id/mapView"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:layout_constraintTop_toTopOf="@id/sub_title1"
    android:layout_marginTop="40dp">
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>